public class Ex5 {
	public static void main(String[] args) {
		int a=1;
		int b=2;
		int c=3;
		int d=4;
		int e=5;
		int sum;
		double  avg;
		sum = a+b+c+d+e;
		avg = sum/5;
		System.out.println("The sum of the given 5 numbers is : " + sum);
		System.out.println("The avaerage of the given 5 numbers is : " + avg);
	}

}
