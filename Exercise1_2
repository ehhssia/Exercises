public class Ex2 {
	public static void main(String[] args) {
		int x = 25;
		int y = 87;
		int z= 78;
		if(x>y)
		{
			if(x>z){
				System.out.println(x + "is the greatest number");
			}
			else
				System.out.println(z + "is the greatest number");
		}
		else if (y>z)
		System.out.println(y + "is the greatest number");
		else
			System.out.println(z + "is the greatest number");
			
			
	}

}
